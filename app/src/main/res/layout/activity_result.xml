<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="shehransyed.com.bmicalculator.Result">

    <TextView
        android:id="@+id/yourBMI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:text="Your BMI is"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/resultView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/yourBMI"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:textSize="50sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/testAgain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/resultView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="105dp"
        android:width="200dp"
        android:background="@drawable/round_button_blue"
        android:onClick="testAgain"
        android:text="Test Again"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/testAgain"
        android:layout_below="@+id/testAgain"
        android:layout_marginTop="10dp"
        android:width="200dp"
        android:background="@drawable/round_button_red"
        android:onClick="exitApp"
        android:text="Exit App"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/resultView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp"
        android:textAlignment="center"
        android:textSize="14sp" />
</RelativeLayout>
