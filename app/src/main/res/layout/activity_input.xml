<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="shehransyed.com.bmicalculator.Input">

    <TextView
        android:id="@+id/heightText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/heightInput"
        android:layout_marginTop="119dp"
        android:text="Height"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/heightInput"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_below="@+id/heightText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:height="50dp"
        android:background="#f2f3f4"
        android:ems="10"
        android:inputType="numberDecimal"
        android:textColor="#000080"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/weightText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/heightInput"
        android:layout_below="@+id/heightInput"
        android:layout_marginTop="20dp"
        android:text="Weight"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/weightInput"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignStart="@+id/weightText"
        android:layout_below="@+id/weightText"
        android:layout_marginTop="12dp"
        android:height="50dp"
        android:background="#f2f3f4"
        android:ems="10"
        android:inputType="numberDecimal"
        android:textColor="#000080"
        android:textSize="20sp"
        tools:elegantTextHeight="false" />

    <Button
        android:id="@+id/calculate"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/weightInput"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:background="@drawable/round_button_blue"
        android:elevation="10dp"
        android:onClick="calculate"
        android:text="Calculate"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(cm)"
        android:textAlignment="center"
        android:textSize="18sp"
        android:layout_above="@+id/heightInput"
        android:layout_toEndOf="@+id/weightText" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(kg)"
        android:textSize="18sp"
        android:layout_above="@+id/weightInput"
        android:layout_alignEnd="@+id/textView" />

</RelativeLayout>
